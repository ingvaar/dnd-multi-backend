{
  "name": "meta",
  "license": "MIT",
  "private": true,
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "clean": "rm -rf packages/*/dist examples/*.js coverage",
    "common:babel": "lerna exec -- babel src --extensions .js,.ts,.tsx --delete-dir-on-start --out-dir",
    "common:webpack": "webpack --mode production",
    "common:types": "lerna exec -- tsc -p ./tsconfig.json --declarationDir",
    "build:types": "npm run common:types -- dist/cjs && npm run common:types -- dist/esm",
    "build:esm": "npm run common:babel -- dist/esm --config-file ../../babel.config.esm.json",
    "build:cjs": "npm run common:babel -- dist/cjs --config-file ../../babel.config.cjs.json",
    "build:umd": "npm run common:webpack -- --config webpack/dist.js",
    "build:examples": "npm run common:webpack -- --config webpack/examples.js",
    "build:all": "npm run build && npm run build:examples",
    "build": "npm run build:esm && npm run build:cjs && npm run build:types && npm run build:umd",
    "analyze:umd": "webpack --mode production --profile --json --config webpack/dist.js > webpack-stats.json",
    "lint": "eslint . && npm run typecheck",
    "typecheck": "tsc --noEmit",
    "test": "jest --config jest.config.js",
    "test:watch": "npm run test -- --watch",
    "test:ci": "CI=yes npm run test",
    "start": "webpack serve --config webpack/dev.js",
    "prepare": "npm run clean && npm run build && npm run lint && npm run test",
    "postinstall": "lerna bootstrap --hoist"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/eslint-plugin": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@babel/register": "^7.12.10",
    "@octokit/core": "^3.2.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/react-hooks": "^5.0.2",
    "@types/jsdom": "^16.2.6",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "acorn": "^8.0.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "eslint": "^7.18.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jest-dom": "^3.6.5",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "jest": "^26.6.3",
    "jest-runner-eslint": "^0.10.0",
    "lerna": "^3.22.1",
    "react": "^16.14.0",
    "react-dnd": "^11.1.3",
    "react-dnd-html5-backend": "^11.1.3",
    "react-dnd-test-backend": "^11.1.3",
    "react-dnd-test-utils": "^11.1.3",
    "react-dnd-touch-backend": "^11.1.3",
    "react-dom": "^16.14.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.17.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  }
}
